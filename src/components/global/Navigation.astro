---
const homePage = Astro.url.origin;
---

<section
  class="justify-center w-full mx-auto bg-black border-t border-b border-white/20 2xl:max-w-7xl lg:fixed lg:z-50">
  <div class="justify-center w-full mx-auto bg-black">
    <div
      class="flex flex-col w-full mx-auto border-white/20 border-x max-w-7xl lg:flex-row lg:items-center lg:justify-between">
      <div
        class="flex flex-col items-center justify-between w-full text-center text-white md:px-0 sm:flex-row sm:px-8">
        <a
          href={homePage}
          class="inline-flex items-center py-4 text-xs text-white uppercase font-display md:px-8 md:text-center"
          ><span>PLANETARY ESCAPE</span>
        </a>
        <a
          href="https://discord.gg/pFvKSmzWpH"
          class="w-full px-6 py-4 text-xs text-center text-black uppercase duration-200 bg-purple-400 font-display hover:bg-blacktext-white lg:w-auto sm:rounded-full hover:text-white"
          >
          Discord > #projects
          </a
        >
      </div>
    </div>
  </div>
</section>
